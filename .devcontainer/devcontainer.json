{
    "name": "beancount_importers-devc",
    "dockerComposeFile": [
        "docker-compose.yml",
        "docker-compose.override.yml"
    ],
    "service": "devcontainer",
    "workspaceFolder": "/workspace/beancount_importers",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "charliermarsh.ruff",
                "ms-vscode.vscode-json",
                "redhat.vscode-yaml",
                "GitHub.vscode-pull-request-github"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/workspace/beancount_importers/.venv/bin/python",
                "python.analysis.venvPath": "/workspace/beancount_importers",
                "python.analysis.venv": ".venv",
                "python.analysis.extraPaths": [
                    "/workspace/beancount_importers/.venv/lib/python3.12/site-packages"
                ],
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.organizeImports": "explicit",
                        "source.fixAll": "explicit"
                    }
                },
                "files.exclude": {
                    "**/__pycache__": true,
                    "**/*.pyc": true,
                    "**/.pytest_cache": true
                },
                "git.ignoredFolders": [
                    ".pre-commit-cache"
                ]
            }
        }
    },
    "initializeCommand": ".devcontainer/scripts/initialize.sh",
    "postAttachCommand": "/workspace/beancount_importers/.devcontainer/scripts/post-attach.sh",
    "postCreateCommand": "/workspace/beancount_importers/.devcontainer/scripts/post-create.sh"
}
